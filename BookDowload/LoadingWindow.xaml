<Window x:Class="BookDowload.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDowload"
        mc:Ignorable="d"
        Title="Loading..." Height="120" Width="300" Closing="WindowClosing">
    <Grid>
        <ProgressBar x:Name="progressBar" IsIndeterminate="True" HorizontalAlignment="Center" Height="32" Margin="0,10,0,0" VerticalAlignment="Top" Width="246"/>
        <Button Content="Отмена" Click="CancelDowload" HorizontalAlignment="Left" Margin="27,47,0,0" VerticalAlignment="Top" Height="27" Width="75"/>

    </Grid>
</Window>
